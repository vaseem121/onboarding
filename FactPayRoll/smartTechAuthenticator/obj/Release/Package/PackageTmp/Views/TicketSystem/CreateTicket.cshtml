@model smartTechAuthenticator.ViewModels.TicketViewModel
@{
    ViewBag.Title = "CreateTicket";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style>

    .card {
        margin-bottom: 130px;
    }
    .text-end {
        text-align: left !important;
    }

    .card-body:before, .card-body:after {
        content: "";
        display: block;
        clear: both;
    }
    .page-breadcrumb .col-12.d-flex.no-block.align-items-center {
        display: flex !important;
    }
    form.form-horizontal .card-body {
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
        border-radius: 10px;
        margin-top: 20px;
    }
    @@media(max-width:575px) {
    .page-breadcrumb .col-12.d-flex.no-block.align-items-center {
        flex-direction: column;
        align-items: flex-start !important;
    }

    .page-breadcrumb .col-12.d-flex.no-block.align-items-center .ms-auto.text-end {
        margin-left: 0 !important;
    }

}
</style>
<div class="page-breadcrumb" style=" margin-top: 110px; margin-left: 88px;">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Add Tickets</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href=@Url.Action("Index","Home")>Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Tickets
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                @using (Html.BeginForm("CreateTicket", "TicketSystem", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    // @Html.HiddenFor(x => x.Id)
                <div class="card-body">
                    <h4 class="card-title">Ticket Information</h4>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Title, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(x => x.Message, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextAreaFor(x => x.Message, new { @class = "form-control" ,@rows="3" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Photo, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBox("file", "", new { type = "file" }) <br />
                            <span style="color:red"> @ViewBag.Message</span>

                        </div>
                    </div><br />
                    <a href="@Url.Action("Index","TicketSystem" )" class="btn btn-danger" style="float: right;margin:5px">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary" style="float: right;margin:5px;">
                        Submit
                    </button>
                </div>
                    
                }
            </div>
        </div>
    </div>
</div>



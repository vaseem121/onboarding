                    <a class="btn btn-info" style="text-align: center; width: 141px; align-self: end; margin: 10px 0px 0px 0px;" href="@Url.Action("CreateTicket", "TicketSystem")">Create New Ticket</a>
                    <div class="status">
                        @Html.LabelFor(x => x.LabelStatus, new { @class = "text-end control-label col-form-label" })

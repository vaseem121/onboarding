                font-size: 18px;
                color: #808080;
            }

            .cards-wrapper .cards .right-content .bottom .items a.btn.btn-info {
                line-height: 1 !important;
            }

    .day-and-time span:first-child {
        color: #808080;
        font-size: 11px;
        text-transform: uppercase;
        margin-bottom: 4px;
        display: inline-block;
    }

    .cards-wrapper .cards .left-content .time {
        color: #5e4f4f;
        font-size: 15px;
    }

    .cards-wrapper .cards .right-content .bottom .items:first-child {
        padding-left: 0;
    }

    .cards-wrapper .cards .right-content .bottom .items button.btn.btn-danger.btn-delete {
        line-height: 1 !important;
    }


    .cards-wrapper .cards .right-content .bottom .items {
        padding: 0;
        flex: none;
        margin-left: 10px;
    }

    .cards-wrapper .cards .right-content .bottom {
        justify-content: flex-start;
    }

        .cards-wrapper .cards .right-content .bottom .items:first-child {
            margin-left: 0;
        }

    .cards-wrapper {
        margin-top: 20px;
    }



    @@media(max-width:767px) {

                Id: Id
            }
            $.ajax({
                type: "POST",
                url: "/TicketSystem/DeleteTicket",
                data: Category,
                success: function (response) {
                    if (response.Status == 1) {
                       // tbl_Customer.ajax.reload();
                        location.reload();
                        showMessage("Success", "Ticket deleted successfully");
                    } else {
                    }

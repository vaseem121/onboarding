<div class="cards-wrapper" style="margin-bottom:120px">
    @if (Model.TicketViewmodelList.Count == 0)
    {
        <div class="cards">
            <span>No record Found!</span>
        </div>
    }
    else
    {
        foreach (var item in Model.TicketViewmodelList)
        {
            <div class="cards">
                <div class="left-content">
                    <div class="price">
                        <span> @item.Title</span>
                    </div>
                    <div class="day-and-time">
                        <span>Ticket Date</span>
                        <div class="time">@item.CreatedDate</div>
                    </div>
                </div>
                <div class="right-content">
                    <div class="top">
                        <p>
                            <b>Massage :</b> @item.Message
                            <b  style="float:right; font-size:16px;">
                                @if (@item.Status == "Solved" && @item.Rating != 0)
                                {
                                    for (int i = 1; i < 6; i++)
                                    {                                      
                                        if (i <= @item.Rating)
                                        {
                                          <span class="checked">★ </span>
                                          
                                        }
                                        else
                                        {
                                          <span class="">★ </span>
                                         }
                                    }
                                }
                                @if (@item.Status == "Solved" && @item.Rating == 0)
                                {
                            <b class="rating">
                                <span id="1" class="" data-id="@item.Id"></span>
                                <span id="2" class="fa fa-star star1" data-id="@item.Id"></span>
                                <span id="3" class="fa fa-star star1" data-id="@item.Id"></span>
                                <span id="4" class="fa fa-star star1" data-id="@item.Id"></span>
                                <span id="5" class="fa fa-star star1" data-id="@item.Id"></span>
                            </b>
                                    

                                }
                            </b>
                        </p>
                        @*<p>Order Id: @item.Id</p>*@
                    </div>
                    <div class="bottom">
                        <div class="items">
                            <span>Ticket Status</span>
                            <span class="badge rounded-pill bg-primary text-white">@item.Status</span>
                        </div>
                        <div class="items">
                            <a href='/TicketSystem/TicketEdit?Id=@item.Id' class='btn btn-info'>DISCUSS</a>
                        </div>
                        @*<div class="items">
                                <a href='/TicketSystem/ViewTicketDetails?Id=@item.Id' class='btn btn-info'>View</a>
                            </div>*@
                        <div class="items">
                            @*<a class='btn btn-info btn-delete'>Delete</a>*@
                            <button class='btn btn-danger btn-delete' data-id=@item.Id>Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

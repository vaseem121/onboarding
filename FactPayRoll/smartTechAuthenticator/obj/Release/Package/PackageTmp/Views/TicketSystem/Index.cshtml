        margin-top: 20px;
    }

    .page-breadcrumb .col-12 select#LabelStatus {
        width: auto;
        margin-left: 30px;
    }

    .page-breadcrumb .col-12 label.text-end {
        margin-left: 10px;
    }
</style>

            margin: 0 0 20px;
            width: 100%;
        }

            .cards-wrapper .cards .right-content .bottom .items {
                padding: 0 4px;
            }

            .cards-wrapper .cards .left-content {
                width: 30%;
                padding: 10px 6px;
            }

            .cards-wrapper .cards .right-content {
                width: 70%;
                padding: 10px 8px;
            }

                .cards-wrapper .cards .right-content p {
                    font-size: 14px;
                }

        .cards-wrapper {
            padding: 0 8px;
        }

            .cards-wrapper .cards .right-content .bottom {
                flex-wrap: wrap;
            }

                .cards-wrapper .cards .right-content .bottom .items {
                    margin-left: 0px;
                    padding: 0 1px;
                }

                    .cards-wrapper .cards .right-content .bottom .items a.btn.btn-info {
                        padding-left: 5px;
                        padding-right: 5px;
                    }


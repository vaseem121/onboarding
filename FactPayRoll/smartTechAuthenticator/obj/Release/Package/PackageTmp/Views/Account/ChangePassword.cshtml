@model smartTechAuthenticator.ViewModels.PasswordChangeModel
@{

    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .text-end{
        text-align:left!important;
    }
    .card-body:before, .card-body:after {
        content: "";
        display: block;
        clear: both;
    }
</style>
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Change Password</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Customer")">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Change Password
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()              
                <div class="card-body">
                    <h4 class="card-title">  Change Password Information</h4>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Password, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(x => x.newPassword, new { type = "password", @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(x => x.newPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.newPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Confirmpwd, new { @type = "Password", @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.PasswordFor(x => x.Confirmpwd, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Confirmpwd, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                    <div class="">
                        <div class="card-body">
                            <a href="@Url.Action("","Customer" )" class="btn btn-danger" style="float: right;margin:5px;">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" style="float: right;margin:5px">
                                Submit
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>




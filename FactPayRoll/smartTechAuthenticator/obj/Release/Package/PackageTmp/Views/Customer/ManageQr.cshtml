@model smartTechAuthenticator.ViewModels.ManageQrViewModel
@{
    ViewBag.Title = "ManageQr";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Manage QRCode</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Customer")">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Manage QRCode
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <a class="btn btn-info" style="text-align: center; width: 80px; align-self: end; margin: 10px 40px;" href="@Url.Action("UploadQrCode", "Customer")">Upload</a>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tbl_ManageQr"
                               class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>QrCode</th>
                                    <th>Product</th>
                                    @*<th>Image</th>*@
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/Customers/ManageQr.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

            $("#SubmitProject").click(function () {
                if ($("#Validatetextbox").val() == "") {
                    alert("There is no value in textbox");
                    return false;
                }
            });
            $('.ProductClass').on('change', function () {
                alert("Status Update succesfully !");
                var QRId = $(this).attr("DataValue");
                var ProductId = this.value;

                var data = { "QRId": QRId, "ProductId": ProductId};
               $.ajax({
                   url: '@Url.Action("UpdateProduct", "Customer")',
                   type: "post",
                   contentType: 'application/x-www-form-urlencoded',
                   data: data,
                   success: function (result) {
                       if (result == "1") {
                           location.reload();
                          // alert("Status Update succesfully !");

                       } else {
                          // alert("Error in Update Status !");
                       }
                   }
               });
            });
        });
</script>



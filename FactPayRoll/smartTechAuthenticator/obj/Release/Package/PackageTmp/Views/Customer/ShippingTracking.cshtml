
@{
    ViewBag.Title = "ShippingTracking";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .text-end {
        text-align: left !important;
    }

        .page-breadcrumb .col-12 {
            display: flex !important;
        }
    .page-breadcrumb .filter {
        display: flex;
        position: relative;
        top: 15px;
    }

        .page-breadcrumb .filter .date {
            margin-left: 30px;
            display: flex;
            align-items: center;
        }

            .page-breadcrumb .filter .date label {
                margin: 0;
                margin-right: 5px;
                min-width: 45px;
            }

        .page-breadcrumb .filter .dropdown {
            margin-left: 140px;
            min-width: 120px;
        }

            .page-breadcrumb .filter .dropdown select.form-control {
                appearance: auto;
            }

    @@media(max-width:767px) {
        .page-breadcrumb .filter {
            position: absolute;
            top: 70px;
        }

        .page-breadcrumb {
            position: relative;
            padding-bottom: 60px;
        }

            .page-breadcrumb .filter .date {
                margin-left: 0;
            }

            .page-breadcrumb .filter .dropdown {
                margin-left: 10px;
            }
    }
</style>
<div class="page-breadcrumb" style="">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Orders </h4>
                <div class="filter">
                    <div class="date">
                        <label> Filter :</label>
                        <input id="startdate" type="date" class="datepicker form-control" value="">
                    </div>
                    <div class="dropdown">
                        <select class="form-control lblStatus">
                            <option value="0" selected>Select Tracking Status</option>
                            <option value="1">Orderd</option>
                            <option value="2">Shipped</option>
                            <option value="3">Out for Delivery</option>
                            <option value="4">Delivered</option>
                        </select>
                    </div>
                </div>
                <div class="ms-auto text-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Customer")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Order History
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid" style="margin-bottom: 80px;">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tbl_Order" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Order Id</th>
                                    <th>User Name</th>
                                    <th>Payment Status</th>
                                    <th>Tracking Status</th>
                                    <th>Order Date</th>
                                    <th>Total Price</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Content/assets-admin/extra-libs/DataTables/datatables.min.js"></script>
<script src="~/Scripts/Customers/Shipping_tarcking.js"></script>


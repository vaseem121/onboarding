@model smartTechAuthenticator.ViewModels.ViewTestHistoryModel
@{
    ViewBag.Title = "ViewCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var i = 1;
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Test History</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Customers", "Customer")">Customer</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Test History
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tbl_CustomersView"
                               class="table table-striped table-bordered" style="text-align:center">
                            <thead>
                                <tr>
                                    <th>Sr.No</th>
                                    <th>Test Date</th>
                                    <th>Test Result</th>
                                    <th>Test Photo</th>
                                    <th>Type of Test</th>
                                    <th>Certificate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ViewDataList.Count == 0)
                                {
                                    <tr>
                                        <td colspan="6" class="text-left pl-2">No data available</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model.ViewDataList)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@item.Date</td>
                                            <td>@item.TestResults</td>
                                            <td>
                                                @if (item.FileUrl != null)
                                                {
                                                    <img src="~/Content/UploadedFiles/@item.FileUrl" alt="File" width="50" height="50" />
                                                }
                                                else
                                                {
                                                    <img src="~/Content/assets/img/cad4b_download.png" alt="File" width="50" height="50" />
                                                }
                                            </td>
                                            <td>@item.AntigenType</td>
                                            <td>Certificate</td>
                                        </tr>
                                        i++;
                                    }
                                }


                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/Customers/CustomersView.js"></script>





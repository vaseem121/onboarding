@model smartTechAuthenticator.ViewModels.TermPrivacyViewModel
@{
    ViewBag.Title = "EditTermPrivacyNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.ckeditor.com/4.18.0/standard/ckeditor.js"></script>
<style>
    .text-end {
        text-align: left !important;
    }

    .card-body:before, .card-body:after {
        content: "";
        display: block;
        clear: both;
    }
</style>
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">TermPrivacyAbout</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("TermPrivacyDetails","Customer")">TermPrivacyDetails</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            TermPrivacyAbout
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                @using (Html.BeginForm("EditTermPrivacyNews", "Customer", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)
                    <div class="card-body">
                        <h4 class="card-title">TermPrivacyAbout</h4>

                        <div class="form-group row">
                            @Html.LabelFor(x => x.Title, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.Description, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextArea("Description", htmlAttributes: new { name = "Description", @id = "FullDescription", @class = "form-control", @rows = "20" })
                                @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                                <script>
                                    CKEDITOR.replace("FullDescription");
                                </script>
                            </div>
                        </div>
                       
                    </div>
                    <div class="">
                        <div class="card-body">
                            <a href="@Url.Action("TermPrivacyDetails","Customer" )" class="btn btn-danger" style="float: right;margin:5px;">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" style="float: right;margin:5px;">
                                Update
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



    $(document).ready(function () {
        $("#txtDate").on('change', function () {
            var date = $("#txtDate").val();
            if (date != null && date != '') {
                window.location.href = "/Mall/OrderHistory/?date="+date+"";
            }
  
        });
    });
</script>



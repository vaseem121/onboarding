@model smartTechAuthenticator.ViewModels.NewsViewModel
@{
    ViewBag.Title = "NewsDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int num = 0;
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">NewsDetails</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Customer")">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            NewsDetails
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <a class="btn btn-info" style=" text-align: center; width: 80px; align-self: end; margin: 10px 40px; " href="@Url.Action("InsertNews", "News")">Create</a>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tbl_AllNews"
                               class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Photo</th>
                                    <th>Created Date</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/Newss/News.js"></script>

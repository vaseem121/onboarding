
@{
    ViewBag.Title = "Scan QR";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<style>
    @@media(min-width:768px) {
        #hero .container {
            margin-top: 5%;
        }
    }
    div#reader {
        position: relative;
        padding: 0px;
        border: 1px solid silver;
        min-height: calc(100vh - 230px);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 30px 0 80px;
        box-shadow: 0 0 10px rgb(0 0 0 / 17%);
        border-radius: 20px;
        border: 0 !important;
    }

    div#reader img[alt="Info icon"] {
        top: 10px !important;
        right: 10px  !important;
    }
    div#reader button {
        border: 0;
        outline: none;
        background: #111246;
        color: #fff;
        border-radius: 20px;
        padding: 10px 20px;
    }

    div#reader a#reader__dashboard_section_swaplink {
        text-decoration: none !important;
        display: inline-block;
        margin-top: 20px;
    }
    div#reader__dashboard_section_fsr span {
        display: block;
        margin-top: 15px;
    }
</style>
<section id="hero" class="hero d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div id="reader"></div>
            </div>
        </div>
    </div>
</section>
<script src="~/Scripts/QR-Scanner/html5-qrcode.min.js"></script>
<script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
<script src="~/Scripts/QR-Scanner/QrScanner.js"></script> 


@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .img-responsive {
        width: 60px;
        height: 60px;
        object-fit: cover;
    }

    table#tbl_TicketSystem td {
        padding: 5px;
    }
</style>
<div class="page-breadcrumb" style="">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Order List</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Customer")">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Order List
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tbl_OrderList"
                               class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>UserName </th>
                                    <th>Paymentstatus </th>
                                    <th>Order Date</th>
                                    <th>Total Ammount</th>
                                    <th>View</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Content/assets-admin/extra-libs/DataTables/datatables.min.js"></script>
<script src="~/Scripts/Customers/OrderList.js"></script>



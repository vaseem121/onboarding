<script type="text/javascript">

    $("#f1").click(function () {
        debugger;
        var formdata = $("#E2E626B3-44FD-4843-B23F-F41847674C39").html();
        var formid = "E2E626B3-44FD-4843-B23F-F41847674C39";
        var userid = $('#userid').val();

        var data = { "formdata": formdata, "formid": formid, "userid": userid };

        $.ajax({

     url: '@Url.Action("SaveTaxformView", "Home")',
     type: "post",
     contentType: 'application/x-www-form-urlencoded',
     data: data,

            success: function (result) {
                if (result.Data == 1) {
                    alert("Tax Form Details saved successfully");
                } else {
                    alert("Failed, Details not saved");
                }
            },
            error: function (r) {
                alert(r);
            }
        });
    });

</script>

@model smartTechAuthenticator.ViewModels.TrackingFormsViewModel
@{
    ViewBag.Title = "Record";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

@{
    var day = Convert.ToDateTime(@Model.Date).DayOfWeek.ToString();

}
<style>
    label {
        display: inline-block;
        margin-top: 15px;
    }

    .user-form h3 {
        text-align: left;
    }

    .container h4 {
        text-align: left;
    }

    .user-form p {
        text-align: left;
    }

    body {
        background-color: #efefef;
    }

    .user-form h3 {
        text-align: left;
        padding-left: 15px;
    }

    @@media (max-width: 768px) {
        .fa-search-head {
            font-size: 20px;
            color: white;
            padding-top: 15px;
            position: absolute;
            right: 15px;
            top: 41%;
        }

        .mobile-nav-toggle {
            padding-top: 25px !important;
        }

            .mobile-nav-toggle.bi-x {
                top: 0px !important;
            }

        .col-md-3 {
            width: 30%;
        }

        .col-md-6 {
            width: 50%;
        }

        .col-md-9 {
            width: 70%;
        }

        .img-responsive {
            width: 100%;
        }

        .product-content p {
            padding: 0px;
            margin: 0px;
        }

        p label {
            font-weight: bold !important;
            padding: 0px;
            margin: 1px;
        }

        .user-form h4 {
            font-weight: bold;
            color: crimson;
        }

        .user-form .product-row {
            background-color: rgb(255 255 255);
            padding: 10px;
            box-shadow: 0px 0px 4px 2px;
            margin: 15px 0px;
        }

        .product-img {
            padding-top: 40px;
        }

        .product-search {
            position: absolute;
            right: 25px;
            top: 50px;
        }

        .search-row {
            position: relative;
            margin-bottom: 25px;
        }

        .upload-btn {
            margin: 10px auto;
        }

        .product .btn {
            margin: 0px;
        }
    }

    @@media (min-width: 769px) {
        .product img {
            box-shadow: 0px 0px 2px 2px;
            display: block;
            margin: 10px auto;
            border-radius: 8px;
            width: 75%;
        }

        #hero .container {
            margin-top: 0%;
        }

        .col-md-3 {
            width: 25% !important;
        }

        .footer-menu .fa {
            display: block !important;
            margin: auto;
        }

        .fa-search-head {
            font-size: 20px;
            color: white;
            padding-top: 15px;
            position: absolute;
            right: 15px;
            top: 0%;
        }

        .mobile-nav-toggle {
            padding-top: 25px !important;
        }

            .mobile-nav-toggle.bi-x {
                top: 0px !important;
            }

        .col-md-3 {
            width: 30%;
        }

        .col-md-6 {
            width: 50%;
        }

        .col-md-9 {
            width: 70%;
        }

        .img-responsive {
            width: 50%;
        }

        .product-content p {
            padding: 0px;
            margin: 0px;
        }

        p label {
            font-weight: bold !important;
            padding: 0px;
            margin: 1px;
        }

        .user-form h4 {
            font-weight: bold;
            color: crimson;
        }

        .user-form .product-row {
            background-color: rgb(255 255 255);
            padding: 10px;
            box-shadow: 0px 0px 4px 2px;
            margin: 15px 0px;
        }

        .product-img {
            padding-top: 40px;
        }

        .product-search {
            position: absolute;
            right: 25px;
            top: 50px;
        }

        .search-row {
            position: relative;
            margin-bottom: 25px;
        }

        .upload-btn {
            display: block;
            margin: 10px auto;
        }

        .hero {
            overflow: scroll;
        }

        .product .btn {
            margin: 0px;
        }

        .product-img .img-responsive {
            display: block;
            margin: auto;
        }
    }
</style>
<!-- ======= Hero Section ======= -->
<section id="hero" class="hero d-flex align-items-center">

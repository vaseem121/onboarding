    <div class="container">
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="product-block">
                    <div class="row search-row">
                        <div class="col-md-12 ">
                            <label><b>Search Product</b></label>
                            <input type="text" class="form-control" />

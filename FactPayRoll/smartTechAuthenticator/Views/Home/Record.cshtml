                                    <p><label>Time:</label>@Model.Time</p>
                                    <p><label>Location:</label>@Model.Place</p>
                                    <p><label>Status:</label> <a class="badge badge-success">@Model.TestResults</a></p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="product-img">
                                    <img src="/Content/assets/img/download.jpg" class="img-responsive" alt="product image">
                                    <a class="btn btn-success upload-btn">Upload</a>
                                </div>
                            </div>
                        </div>
                        <h4>@Model.Date, @day</h4>
                        <div class="row product-row">
                            <div class="col-md-9">
                                <div class="product-content">
                                    <p><label>Product:</label>@Model.ProductName</p>
                                    <p><label>Authentic Code:</label>@Model.AuthentiCode</p>
                                    <p><label>Date:</label>@Model.Date</p>
                                    <p><label>Time:</label>@Model.Time</p>
                                    <p><label>Location:</label>@Model.Place</p>
                                    <p><label>Status:</label> <a class="badge badge-danger">Postive</a></p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="product-img">
                                    <img src="/Content/assets/img/download.jpg" class="img-responsive" alt="product image">
                                    <a class="btn btn-success upload-btn">Upload</a>
                                </div>
                            </div>
                        </div>
                        <h4>@Model.Date, @day</h4>
                        <div class="row product-row">
                            <div class="col-md-9">
                                <div class="product-content">
                                    <p><label>Product:</label>@Model.ProductName</p>
                                    <p><label>Authentic Code:</label>@Model.AuthentiCode</p>
                                    <p><label>Date:</label>@Model.Date</p>

@model smartTechAuthenticator.ViewModels.NewsViewModel
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css">
<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: sans-serif;
        }

        .post-wrapper .page-center {
            max-width: 1260px;
            margin: 0 auto;
            padding: 0 30px;
        }

        .post-wrapper {
            padding: 50px 0 120px;
        }

        .post-wrapper .post-image {
            text-align: center;
            margin-bottom: 40px;
        }

        .post-wrapper .title h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .post-wrapper p {
            margin-bottom: 20px;
            line-height: 1.5;
        }
            .post-wrapper .post-image img {
                width: 100%;
                margin: 0 auto;
                height: 331px;
                object-fit: cover;
            }
    .page-breadcrumb .col-12 {
        display: flex !important;
    }

    @@media(max-width:575px) {
        .page-breadcrumb .col-12 {
            flex-direction: column;
            align-items: flex-start !important;
            justify-content: flex-start;
        }

            .page-breadcrumb .col-12 .ms-auto.text-end {
                margin-left: 0 !important;
            }
    }

</style>
<div class="page-breadcrumb" style=" margin-top: 100px;">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">News Description</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            News Description
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="post-wrapper">
        <div class="page-center">
            <div class="post-image">
                <img src="~/Content/NewsFile/@Model.Photo" alt="">
            </div>
            <div class="title">
                <h2>@Model.NewsTitle</h2>
            </div>
            <div class="content">
                <p>
                    @Html.Raw(Model.Description)
                </p>
            </div>
        </div>  
    </div>
   
   
 

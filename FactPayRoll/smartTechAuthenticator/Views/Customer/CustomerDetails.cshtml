@model smartTechAuthenticator.ViewModels.CustomerInfoViewModel
@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    <style>
        button.btn.btn-primary {
            margin-right: 5px;
        }

        .card-body:before, .card-body:after {
            content: "";
            display: block;
            clear: both;
        }
        table.dataTable {
            width: 100% !important;
        }
    </style>
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Customer Detail</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Customers", "Customer")">Customers</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Tabs Page
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active"
                           data-bs-toggle="tab"
                           href="#home"
                           role="tab">
                            <span class="hidden-sm-up"></span>
                            <span class="hidden-xs-down">Details</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           data-bs-toggle="tab"
                           href="#profile"
                           role="tab">
                            <span class="hidden-sm-up"></span>
                            <span class="hidden-xs-down">Test History</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           data-bs-toggle="tab"
                           href="#messages"
                           role="tab">
                            <span class="hidden-sm-up"></span>
                            <span class="hidden-xs-down">Order history</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link"
                           data-bs-toggle="tab"
                           href="#IP"
                           role="tab">
                            <span class="hidden-sm-up"></span>
                            <span class="hidden-xs-down">IP</span>
                        </a>
                    </li>

                </ul>

                <!-- Tab panes -->
                <div class="tab-content tabcontent-border">
                    <div class="tab-pane active" id="home" role="tabpanel">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    @using (Html.BeginForm("CustomerDetails", "Customer", FormMethod.Post, new { @class = "form-horizontal" }))
                                    {

                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(x => x.Id)
                                        @Html.HiddenFor(x => x.UserPass)
                                        <div class="card-body">
                                            <h4 class="card-title">Customer Information</h4>
                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.Name, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.Email, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.Nric, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextBoxFor(x => x.Nric, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.Nric, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.MobileNo, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.MobileNo, "'", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.StateId, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.DropDownListFor(model => model.StateId, (IEnumerable<SelectListItem>)ViewData["States"], "Select State", new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.StateId, "", new { @class = "text-danger'" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.DistricttId, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.DropDownListFor(model => model.DistricttId, (IEnumerable<SelectListItem>)ViewData["Districstts"], "Select Districtt", new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.DistricttId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.PostCode, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextBoxFor(x => x.PostCode, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.PostCode, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                @Html.LabelFor(x => x.Address, new { @class = "col-sm-3 text-end control-label col-form-label" })
                                                <div class="col-sm-9">
                                                    @Html.TextAreaFor(x => x.Address, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="">
                                            <div class="card-body">
                                                <a href="@Url.Action("Customers","Customer" )" class="btn btn-danger" style="float: right;">
                                                    Cancel
                                                </a>
                                                <button type="submit" class="btn btn-primary" style="float: right;">
                                                    Update
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane p-20" id="profile" role="tabpanel">
                        <div>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Test History</h5>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered zero_config1" style="width:100% !important;">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>ProductName</th>
                                                    <th>AntigenType</th>
                                                    <th>AuthentiCode</th>
                                                    <th>TestResults</th>
                                                    <th>Date Created</th>
                                                    <th>View</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane p-20" id="messages" role="tabpanel">
                        <div>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Order History Datatable</h5>
                                    <div class="table-responsive">
                                        <table id="zero_config2"
                                               class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>UserName </th>
                                                    <th>Order_Id </th>
                                                    <th>OrderDate</th>
                                                    <th>Shippingstatus</th>
                                                    <th>Qty</th>
                                                    <th>TotalAmount</th>
                                                    <th>View</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane p-20" id="IP" role="tabpanel">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">IP Datatable</h5>
                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered zero_config3">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>CustomerUserId</th>
                                                <th>UserName</th>
                                                <th>IP_Address</th>
                                                <th>EventDateTime</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/Customers/CustomerHistory.js"></script>
<script src="~/Scripts/Customers/CustomerOrderHistory.js"></script>
<script src="~/Scripts/Customers/IP_AddressData.js"></script>
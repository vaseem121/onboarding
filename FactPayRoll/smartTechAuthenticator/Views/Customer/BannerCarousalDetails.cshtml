@model smartTechAuthenticator.ViewModels.BannerCarouselViewModel
@{
    ViewBag.Title = "BannerCarousalDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>
    .text-end {
        text-align: left !important;
    }
</style>
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title"> Banner Carousal</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("ManageBannerCarousal","Customer")">Banner Carousal</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Banner Carousal
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                @using (Html.BeginForm("BannerCarousalDetails", "Customer", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x => x.Photo)
                    <div class="card-body">
                        <h4 class="card-title">Banner Information</h4>
                        <div class="form-group row">
                            @Html.TextBox("file", "", new { type = "file", @id = "Validatetextbox" }) <br />
                            @ViewBag.Message
                            @Html.ValidationMessageFor(x => x.Photo, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.Title, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.Description, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="">
                        <div class="card-body">
                            <a href="@Url.Action("ManageBannerCarousal","Customer" )" class="btn btn-danger" style="float: right;margin:5px">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" style="float: right; margin: 5px">
                                Update
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


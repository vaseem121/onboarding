@model smartTechAuthenticator.ViewModels.CustomerInfoViewModel
@{
    ViewBag.Title = "CreateCompany";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .text-end {
        text-align: left !important;
    }

    .card-body:before, .card-body:after {
        content: "";
        display: block;
        clear: both;
    }
</style>
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Manage Company</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Products", "Customer")">Manage Company</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Manage Company
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                @using (Html.BeginForm("CreateProduct", "Customer", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)
                    <div class="card-body">
                        <h4 class="card-title">Company Information</h4>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.Name, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(x => x.Location, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Location, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(x => x.Website, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Website, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(x => x.Email, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.MobileNo, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(x => x.UserPass, new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextBoxFor(x => x.UserPass, new { @class = "form-control" })
                            </div>
                        </div>

                    </div>

                    <div class="">
                        <div class="card-body">
                            
                            <a href="@Url.Action("Products","Customer" )" class="btn btn-danger" style="float: right;margin:5px;">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" style="float: right;margin:5px;" id="Submitform">
                                Submit
                            </button>
                        </div>
                    </div>
                }

            </div>
<script src="~/Content/assets-admin/libs/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#SubmitProject").click(function () {
            if ($("#Validatetextbox").val() == "" || $("#ProductId1").val() == "Select" || $("#ProductId1").val() == null) {
                alert("All filed is required !");
                return false;
            }
        });
        var a = $('#protype').val();
        if (a=="2") {
            $(".colrsize").css("display", "flex");
        }

        $("#protype").change(function () {
            var a = $('#protype').val();
            if (a == '2') {
                $(".colrsize").css("display", "flex");
            }
            else {
                $(".colrsize").css("display", "none");
            }
        })

    });
    var a = 1;
    $(function () {
        $('#addpro').click(function () {
            $(' <div class="row" id = "newrow' + a + '">' +
                ' <div class= "col-md-9" > ' +
                '<div class= "form-group" > ' +
                '<input class="form-control" id="protype" name="ProductTag" type="text" >' +
                '</div></div>' +
                '<div class="col-sm-3" id="DeleteTag">' +
                '<button type="button" class="btn btn-primary" onclick="removetag(' + a + ');">Delete</button>' +
                '</div>' +
                ' </div>').appendTo('#tagAdd');
            a++;
            return false;
        });
    });

    function removetag(index) {
        if (a > 1) {
            $('#newrow' + index).remove();
            a--;
        }
        return false;
    }

    var counter1 = 1;
    $(function () {
        $('#Mainadd').click(function () {
            $(' <div class="row" id = "tableMainrow0' + counter1 + '">' +
                ' <div class= "col-md-6" > ' +
                '<div class= "form-group" > ' +
                '<input class="form-control" id="Size" name="Size" type="text" >' +
                '</div></div>' +
                '<div class="col-sm-3" id="Add">' +
                '<button type="button" class="btn btn-primary" onclick="removeMainTr(' + counter1 + ');">Delete</button>' +
                '</div>' +
                ' </div>').appendTo('#MainSizeAdd');
            counter1++;
            return false;
        });
    });
    function removeMainTr(index) {
        if (counter1 > 1) {
            $('#tableMainrow0' + index).remove();
            counter1--;
        }
        return false;
    }

    var counter2 = 1;
    $(function () {
        $('#MainaddAdd').click(function () {
            $(' <div class="row" id = "tableMainrow0' + counter2 + '">' +
                ' <div class= "col-md-8" > ' +
                '<div class= "form-group" > ' +
                '<input class="form-control" id="Color" name="Color" type="color" >' +
                '</div></div>' +
                '<div class="col-sm-3" id="AddSize">' +
                '<button type="button" class="btn btn-primary" onclick="removeMain(' + counter2 + ');">Delete</button>' +
                '</div>' +
                ' </div>').appendTo('#MainsubmissionTableAdd');
            counter2++;
            return false;
        });
    });

    function removeMain(index) {
        if (counter2 > 1) {
            $('#tableMainrow0' + index).remove();
            counter2--;
        }
        return false;
    }

</script>


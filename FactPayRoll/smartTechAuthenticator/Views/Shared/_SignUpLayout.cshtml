<!DOCTYPE html>
<html lang="en">
@using smartTechAuthenticator.ViewModels
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Creat Account</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <!-- Favicons -->
    <link href="~/Content/assets/img/favicon.png" rel="icon">
    <link href="~/Content/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/Content/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/Content/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <!-- Template Main CSS File -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .toast {
            position: absolute;
            bottom: 10px;
            right: 10px;
            width: 350px;
            max-width: 100%;
            font-size: 0.875rem;
            pointer-events: auto;
            background-clip: padding-box;
            border: 1px solid rgba(0,0,0,0.1);
            box-shadow: 0 0.5rem 1rem rgb(0 0 0 / 15%);
            border-radius: 2px;
            z-index: 999;
            color: white;
            background-color: #28b779 !important;
            box-shadow: 0px 0px 3px 1px;
        }

        .toast-header button {
            color: white !important;
            background-color: #28b779 !important;
        }

        .toast-header {
            background-color: #28b779 !important;
            color: white;
            font-size: 16px !important;
            font-weight: bold;
        }

        .topbar {
            position: relative;
            z-index: 9999 !important;
            box-shadow: 1px 0px 7px rgb(0 0 0 / 5%);
            background: #fff;
            height: 64px;
        }

        @@media(max-width:768px) {
            body {
                background: #00004a;
            }

            .fixed-top {
                background: #00004a;
                padding: 15px 0;
                box-shadow: none;
            }

            .hero {
                border: 1px solid gray;
                border-radius: 30px;
                position: fixed;
                top: 23%;
                z-index: 999;
                height: 81vh;
            }

            label {
                display: inline-block;
                font-size: 16px;
            }

            .fa-eye {
                position: absolute;
                right: 40px;
                top: 53.5%;
            }

            .fa-eye-slash {
                position: absolute;
                right: 40px;
                top: 53.5%;
            }

            .login_section {
                padding: 8%;
            }
        }

        @@media(min-width:769px) {
            body {
                background: #00004a;
            }

            .fixed-top {
                background: #00004a;
                padding: 15px 0;
                box-shadow: none;
            }

            .hero {
                border: 1px solid gray;
                border-radius: 30px;
                position: fixed;
                top: 23%;
                z-index: 999;
                height: 81vh;
            }

            label {
                display: inline-block;
                font-size: 16px;
            }

            .fa-eye {
                position: absolute;
                right: 26%;
                top: 55.5%;
            }

            .fa-eye-slash {
                position: absolute;
                right: 26%;
                top: 55.5%;
            }

            .login_section {
                padding: 25%;
            }

            .logo-header {
                display: block;
                margin: auto;
                width: 20% !important;
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -10%);
            }
        }
    </style>
    <style>
        @@media(min-width:768px) {
            #hero .container {
                margin-top: 5%;
            }
        }
    </style>
</head>

<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            @*<a href="@Url.Action("Index","Home")" class="logo d-flex align-items-center">
                <center>
                    <img src="~/Content/assets/img/blue-logo.jpg" alt="" class="logo-header">
                </center>
            </a>*@
        </div>
        <center><h2>Fact PayRoll</h2> </center>
    </header>
    <!-- End Header -->

    @RenderBody()
    <main id="main">
        @{

            if (TempData["toastmessage"] != null)
            {
                ToastModel toastModel = (ToastModel)TempData["toastmessage"];
                Html.RenderPartial("_toaster", toastModel);
            }
        }

    </main>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    @section  Scripts{
        @Scripts.Render("~/bundle/js");
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/toaster/js");
    }
</body>
</html>
@model smartTechAuthenticator.ViewModels.CustomerInfoViewModel
@{
    ViewBag.Title = "CategoryDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    button.btn.btn-primary {
        margin-right: 5px;

    }
    .card-body:before, .card-body:after {
        content: "";
        display: block;
        clear: both;
    }
</style>
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Employee</h4>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Category")">Employees</a></li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Employee
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                @using (Html.BeginForm("CategoryDetails", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
                {

                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)
                <div class="card-body">
                    <h4 class="card-title">Employee Information</h4>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Name, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(x => x.Location, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Location, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Website, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Website, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.Email, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.MobileNo, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(x => x.UserPass, new { @class = "col-sm-3 text-end control-label col-form-label" })
                        <div class="col-sm-9">
                            @Html.TextBoxFor(x => x.UserPass, new { @class = "form-control" })
                        </div>
                    </div>

                </div>
                    <div class="">
                        <div class="card-body">
                            <a href="@Url.Action("Index","Category" )" class="btn btn-danger" style="float: right;">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary" style="float: right;">
                                Update
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>






